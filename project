    case '9': cartfile << storun_name[8]; cartfile << endl; cartfileprice << storun_pr[8]; cartfileprice << endl; cpu();
    case '10':cartfile << storun_name[9]; cartfile << endl; cartfileprice << storun_pr[9]; cartfileprice << endl; cpu();
    case '11':cartfile << storun_name[10]; cartfile << endl; cartfileprice << storun_pr[10]; cartfileprice << endl; cpu();
    default: menu();
    }
    //----------------------------------------------------

    //close files-----------------------------------------
    cartfile.close();
    dfiledata.close();
    pfileprice.close();
    cartfileprice.close();
    //----------------------------------------------------
}
